<jboss-deployment-structure
    xmlns="urn:jboss:deployment-structure:1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <deployment>
        <dependencies>
            <module name="org.hibernate.ogm" slot="${hibernate-ogm.module.slot}" services="import" />
            <module name="org.hibernate.ogm.couchdb" slot="${hibernate-ogm.module.slot}" services="import" />
            <module name="org.jboss.resteasy.resteasy-jackson2-provider" />
        </dependencies>
        <exclusions>
           <!-- Use Jackson 2 provider; Implicitly the case on WF 8.1 but it's required for EAP 6.x  -->
           <module name="org.jboss.resteasy.resteasy-jackson-provider"/>
        </exclusions>
    </deployment>
</jboss-deployment-structure>
