<module xmlns="urn:jboss:module:1.1" name="org.hibernate.ogm" slot="${hibernate.ogm.module.slot}">
    <resources>
        <resource-root path="hibernate-ogm-core-${project.version}.jar" />
    </resources>
    <dependencies>
        <module name="org.hibernate" export="true" />
        <module name="org.hibernate.commons-annotations" />
        <module name="org.hibernate.hql" slot="${hibernate.hql.module.slot}" />
        <module name="org.hibernate.search.orm" slot="${hibernate-search.module.slot}" optional="true" />

        <module name="javax.persistence.api" />
        <module name="javax.transaction.api" />
        <module name="org.jboss.logging" />

        <module name="org.hibernate.ogm.jipijapa" slot="${hibernate.ogm.jipijapa.module.slot}" services="import" />

        <!-- Needed for Iso8601StringDateType -->
        <module name="javax.xml.bind.api"/>
    </dependencies>
</module>
