<assembly>
    <id>${hibernateWildflyClassifier}</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <baseDirectory>/</baseDirectory>

    <files>
        <!-- OGM -->
        <file>
            <source>${hibernate.ogm.module.xml}</source>
            <outputDirectory>/org/hibernate/ogm/${hibernate.ogm.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.aliases.basedir}/ogm/core/module.xml</source>
            <outputDirectory>/org/hibernate/ogm/main</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/ogm/jipijapa/module.xml</source>
            <outputDirectory>/org/hibernate/ogm/jipijapa/${hibernate.ogm.jipijapa.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.basedir}/ogm/infinispan-embedded/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/infinispan-embedded/${hibernate.ogm.infinispan-embedded.module.slot}</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.basedir}/ogm/infinispan-remote/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/infinispan-remote/${hibernate.ogm.infinispan-remote.module.slot}</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.aliases.basedir}/ogm/infinispan-embedded/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/infinispan-embedded/main</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.aliases.basedir}/ogm/infinispan-remote/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/infinispan-remote/main</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.basedir}/ogm/mongodb/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/mongodb/${hibernate.ogm.mongodb.module.slot}</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.aliases.basedir}/ogm/mongodb/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/mongodb/main</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.basedir}/ogm/neo4j/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/neo4j/${hibernate.ogm.neo4j.module.slot}</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.aliases.basedir}/ogm/neo4j/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/neo4j/main</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
             <source>${module.xml.basedir}/ogm/neo4j-internal/module.xml</source>
             <outputDirectory>/org/hibernate/ogm/neo4j/internal/${hibernate.ogm.neo4j-internal.module.slot}</outputDirectory>
             <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/hql/module.xml</source>
            <outputDirectory>/org/hibernate/hql/${hibernate.hql.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/org/parboiled/module.xml</source>
            <outputDirectory>/org/hibernate/ogm/internal/parboiled/${hibernate.ogm.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>

        <!-- INFINISPAN clustered counter module is not present on 9.1.4 Wildfly distribution. -->
        <!-- Will be available from Infinispan 9.2.0. -->
        <file>
            <source>${module.xml.basedir}/org/infinispan/core/module.xml</source>
            <outputDirectory>/org/infinispan/core/${infinispan.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${module.xml.basedir}/org/infinispan/counter/module.xml</source>
            <outputDirectory>/org/infinispan/counter/${infinispan.module.slot}</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>

    <dependencySets>
        <!-- OGM -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/ogm/${hibernate.ogm.module.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate.ogm:hibernate-ogm-core</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/ogm/jipijapa/${hibernate.ogm.jipijapa.module.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate.ogm:hibernate-ogm-jipijapa</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/ogm/infinispan-embedded/${hibernate.ogm.infinispan-embedded.module.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate.ogm:hibernate-ogm-infinispan-embedded</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/ogm/infinispan-remote/${hibernate.ogm.infinispan-remote.module.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate.ogm:hibernate-ogm-infinispan-remote</include>
            </includes>
        </dependencySet>
        <dependencySet>
             <useProjectArtifact>false</useProjectArtifact>
             <outputDirectory>org/hibernate/ogm/mongodb/${hibernate.ogm.mongodb.module.slot}</outputDirectory>
             <useTransitiveFiltering>false</useTransitiveFiltering>
             <unpack>false</unpack>
             <includes>
                 <include>org.hibernate.ogm:hibernate-ogm-mongodb</include>
                 <include>org.mongodb:mongo-java-driver</include>
              </includes>
       </dependencySet>
       <dependencySet>
              <useProjectArtifact>false</useProjectArtifact>
              <outputDirectory>org/hibernate/ogm/neo4j/${hibernate.ogm.neo4j.module.slot}</outputDirectory>
              <useTransitiveFiltering>false</useTransitiveFiltering>
              <unpack>false</unpack>
              <includes>
                  <include>org.hibernate.ogm:hibernate-ogm-neo4j</include>
                  <include>org.neo4j:neo4j</include>
                  <include>org.neo4j:neo4j-cypher</include>
                  <include>org.neo4j:neo4j-graph-algo</include>
                  <include>org.neo4j:neo4j-graph-matching</include>
                  <include>org.neo4j:neo4j-kernel</include>
                  <include>org.neo4j:neo4j-jmx</include>
                  <include>org.neo4j:neo4j-udc</include>
             </includes>
       </dependencySet>
       <dependencySet>
              <useProjectArtifact>false</useProjectArtifact>
              <outputDirectory>org/hibernate/ogm/neo4j/internal/${hibernate.ogm.neo4j-internal.module.slot}</outputDirectory>
              <useTransitiveFiltering>false</useTransitiveFiltering>
              <unpack>false</unpack>
              <includes>
                  <include>org.neo4j:neo4j-codegen</include>
                  <include>org.neo4j:neo4j-collections</include>
                  <include>org.neo4j:neo4j-common</include>
                  <include>org.neo4j:neo4j-configuration</include>
                  <include>org.neo4j:neo4j-cypher-compiler-2.3</include>
                  <include>org.neo4j:neo4j-cypher-frontend-2.3</include>
                  <include>org.neo4j:neo4j-cypher-compiler-3.1</include>
                  <include>org.neo4j:neo4j-cypher-frontend-3.1</include>
                  <include>org.neo4j:neo4j-cypher-compiler-3.2</include>
                  <include>org.neo4j:neo4j-cypher-frontend-3.2</include>
                  <include>org.neo4j:neo4j-cypher-compiler-3.3</include>
                  <include>org.neo4j:neo4j-cypher-frontend-3.3</include>
                  <include>org.neo4j:neo4j-cypher-logical-plans-3.3</include>
                  <include>org.neo4j:neo4j-cypher-ir-3.2</include>
                  <include>org.neo4j:neo4j-cypher-ir-3.3</include>
                  <include>org.neo4j:neo4j-graphdb-api</include>
                  <include>org.neo4j:neo4j-values</include>
                  <include>org.neo4j:neo4j-index</include>
                  <include>org.neo4j:neo4j-io</include>
                  <include>org.neo4j.driver:neo4j-java-driver</include>
                  <include>org.neo4j:neo4j-logging</include>
                  <include>org.neo4j:neo4j-lucene-index</include>
                  <include>org.neo4j:neo4j-lucene-upgrade</include>
                  <include>org.neo4j:neo4j-primitive-collections</include>
                  <include>org.neo4j:neo4j-resource</include>
                  <include>org.neo4j:neo4j-ssl</include>
                  <include>org.neo4j:neo4j-unsafe</include>

                  <include>org.bouncycastle:bcpkix-jdk15on</include>
                  <include>org.bouncycastle:bcprov-jdk15on</include>
                  <include>io.netty:netty-all</include>

                  <include>com.github.ben-manes.caffeine:caffeine</include>

                  <include>org.scala-lang:scala-reflect</include>
                  <include>org.scala-lang:scala-library</include>
                  <include>org.parboiled:parboiled-scala_2.11</include>

                  <include>com.googlecode.concurrentlinkedhashmap:concurrentlinkedhashmap-lru</include>
                  <include>org.apache.commons:commons-lang3</include>

                 <!-- Include the Lucene version used by Neo4J, not the one from Hibernate Search! -->
                  <include>org.apache.lucene:lucene-core</include>
                  <include>org.apache.lucene:lucene-codecs</include>
                  <include>org.apache.lucene:lucene-backward-codecs</include>
                  <include>org.apache.lucene:lucene-queryparser</include>
                  <include>org.apache.lucene:lucene-analyzers-common</include>
              </includes>
       </dependencySet>
       <!-- HQL -->
       <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/hql/${hibernate.hql.module.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.hibernate.hql:hibernate-hql-parser</include>
                <include>org.hibernate.hql:hibernate-hql-lucene</include>
                <include>org.antlr:antlr-runtime</include>
            </includes>
       </dependencySet>
       <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/hibernate/ogm/internal/parboiled/${hibernate.ogm.module.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.parboiled:parboiled-java</include>
                <include>org.parboiled:parboiled-core</include>
                <include>org.ow2.asm:asm</include>
                <include>org.ow2.asm:asm-tree</include>
                <include>org.ow2.asm:asm-analysis</include>
                <include>org.ow2.asm:asm-util</include>
            </includes>
       </dependencySet>

        <!-- INFINISPAN -->
        <!-- INFINISPAN clustered counter module is not present on 9.1.4 Wildfly distribution. -->
        <!-- Will be available from Infinispan 9.2.0. -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>org/infinispan/counter/${infinispan.module.slot}</outputDirectory>
            <useTransitiveFiltering>false</useTransitiveFiltering>
            <unpack>false</unpack>
            <includes>
                <include>org.infinispan:infinispan-clustered-counter</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>
